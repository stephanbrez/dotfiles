// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "ssh_connections": [
        {
            "host": "populus.birchcrown.com",
            "projects": [
                {
                    "paths": [
                        "/home/stephan/.local/src/3d-reconstruction-from-monocular-multi-food-images",
                    ],
                },
                {
                    "paths": ["~/.local/src/pytorch_tuts"],
                },
            ],
        },
    ],
    // ========== AI ==========
    "agent": {
        "inline_assistant_model": {
            "provider": "zed.dev",
            "model": "claude-sonnet-4",
        },
        "default_profile": "write",
        "default_model": {
            "provider": "anthropic",
            "model": "claude-sonnet-4-5-latest",
        },
    },
    "language_models": {
        "ollama": {
            "api_url": "http://192.168.20.10:11434",
            "available_models": [],
        },
    },
    "features": {
        // "inline_completion_provider": "supermaven"
    },
    "telemetry": {
        "metrics": false,
    },
    "vim_mode": true,
    "vim": {
        "toggle_relative_line_numbers": true,
        "custom_digraphs": {
            "fz": "",
        },
    },
    "autosave": "on_focus_change",
    "tab_size": 4,
    "preferred_line_length": 80,
    "soft_wrap": "bounded",
    // ========== Git ==========
    "git": {
        "inline_blame": {
            "enabled": false,
            "min_column": 80,
        },
    },
    // ========== LSP ==========
    "languages": {
        "Python": {
            "language_servers": ["pyright", "pylsp"],
        },
        "Markdown": {},
    },
    // ========== Terminal ==========
    "terminal": {
        "font_family": "DejaVuSansM Nerd Font Mono",
    },
    // ========== UI ==========
    "active_pane_modifiers": {
        "magnification": 1.0,
        "border_size": 0.0,
        "inactive_opacity": 0.9,
    },
    "tabs": {
        "close_position": "right",
        "file_icons": true,
        "git_status": false,
        "activate_on_close": "history",
        "show_close_button": "hover",
        "show_diagnostics": "off",
    },
    "indent_guides": {
        "enabled": true,
        "line_width": 1,
        "active_line_width": 2,
        "coloring": "indent_aware",
        "background_coloring": "indent_aware",
    },
    "wrap_guides": [80],
    "show_wrap_guides": true,
    "ui_font_size": 16,
    "ui_font_features": {
        "calt": true,
    },
    "buffer_font_family": "DejaVuSansM Nerd Font Mono",
    "buffer_font_size": 16,
    "buffer_font_weight": 400,
    "theme": {
        "mode": "system",
        "light": "Zedokai Light",
        "dark": "One Dark",
    },
    "icon_theme": "Colored Zed Icons Theme Light",
    "project_panel": {
        "entry_spacing": "standard",
    },
    "diagnostics": {
        "include_warnings": true,
        "inline": {
            "enabled": true,
            "update_debounce_ms": 150,
            "padding": 4,
            "min_column": 80,
            "max_severity": null,
        },
    },
    "inlay_hints": {
        "enabled": false,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_other_hints": true,
        "show_background": false,
        "edit_debounce_ms": 700,
        "scroll_debounce_ms": 50,
        "toggle_on_modifiers_press": null,
    },
}
