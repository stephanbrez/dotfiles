### Begin personal config
autoload -Uz compinit; compinit;
# Pretty colors for completions
zstyle ':completion:*:default' list-colors ${(s.:.)LS_COLORS}
zstyle ':completion:*:messages' format ' %F{purple} -- %d --%f'
zstyle ':completion:*:warnings' format ' %F{red}-- no matches found --%f'

# Expand aliases
zstyle ':completion:*' completer _expand_alias _complete _ignored
# case insensitive partial path-completionâ€©
zstyle ':completion:*' matcher-list '' 'm:{a-zA-Z}={A-Za-z}' 'r:|[._-]=* r:|=*' 'l:|=* r:|=*'
zstyle ':completion:*' regular true

# Extended history size
export HISTSIZE=1000000000
export SAVEHIST=1000000000
setopt EXTENDED_HISTORY

# Paths shortcuts
export DOCUMENTS=$HOME/Documents
export ZSHRC_CONFIG=$HOME/.config/zsh
export STARSHIP_CONFIG=$HOME/.config/starship.toml

### End personal config

export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
if command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init --path)"
  eval "$(pyenv init -)"
fi

[[ -f $ZSHRC_CONFIG/aliases.zsh ]] && source $ZSHRC_CONFIG/aliases.zsh
# Plugins
[[ -f $ZSHRC_CONFIG/plugins.zsh ]] && source $ZSHRC_CONFIG/plugins/plugins.zsh
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
eval "$(starship init zsh)"
eval $(thefuck --alias fuck)
eval "$(zoxide init zsh)"
